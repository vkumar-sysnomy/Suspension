<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.suspensionMain.CaptureEvidenceFragment">

    <TextView
        android:id="@+id/suspension_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Suspension Number"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/font_extra_large"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_take_photos"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/suspension_number"
        android:layout_marginHorizontal="@dimen/padding_normal"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:text="Take Photos"
        android:textSize="30sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_add_notes"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/btn_take_photos"
        android:layout_marginHorizontal="@dimen/padding_normal"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:text="Add Notes"
        android:textSize="30sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_add_vrms"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_notes"
        android:layout_marginHorizontal="@dimen/padding_normal"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:text="Add VRMs"
        android:textSize="30sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_complete_job"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/padding_normal"
        android:layout_marginVertical="20dp"
        android:textAllCaps="false"
        android:text="Complete Job"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:enabled="false"/>

</android.support.constraint.ConstraintLayout>